<h2>PC構成リスト投稿詳細</h2>
<%= attachment_image_tag @pc_configuration, :image, fallback: "no_image.jpg", size: "200x200" %>
<p>タイトル：<%= @pc_configuration.title %></p>
<p>説明：<%= @pc_configuration.body %></p>
<p>ユーザーネーム：<%= @pc_configuration.user.name %></p>
<p>投稿日時：<%= @pc_configuration.created_at.to_s(:datetime_jp) %></p>
<% if @pc_configuration.user == current_user %>
  <!--%= link_to "投稿を編集する", edit_post_path(@post) %-->
  <%= link_to "投稿したPC構成リストを削除する", post_path(@pc_configuration), method: :delete, "data-confirm" => "本当に削除しますか？" %>
<% end %>
