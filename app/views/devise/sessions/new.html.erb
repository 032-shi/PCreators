<h2>ログイン</h2>

<%= form_with model: @user, url: user_session_path, local: true do |f| %>
  <div class="field">
    <p>メールアドレス<br><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "○○○○@example.com" %></p>
  </div>

  <div class="field">
    <p>パスワード<br><%= f.password_field :password, autocomplete: "current-password" %></p>
  </div>

  <div class="actions">
    <%= f.submit "ログイン" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
