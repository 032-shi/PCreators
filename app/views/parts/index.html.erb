<h3>パーツデータ一覧</h3>
<table>
  <% @parts.each do |part| %>
  <tr>
    <td><%= part.name%></td>
    <td>
      <% part.part_tags.each do |part_tag| %>
        <%= link_to part_tag_parts_path(part_tag_id: part_tag.id) do %>
        <span>
          #<%= part_tag.name %>
        </span>
        <% end %>
      <% end %>
    </td>
    <td>¥<%= part.price.to_s(:delimited) %></td>
    <td><%= image_tag part.image, size: "100x100", :alt => "パーツ画像" %></td>
  </tr>
  <% end %>
</table>
