<h2>タグ一覧</h2>
<% @post_tag_lists.each do |post_tag_list| %>
  <% if post_tag_list.posts.count.zero? %>
  <% else %>
    <ul>
      <li>
        <%= link_to post_tag_posts_path(post_tag_id: post_tag_list.id) do %>
          <%= post_tag_list.post_tag_name %><%= post_tag_list.posts.count %>
        <% end %>
      </li>
    </ul>
  <% end %>
<% end %>

<h2><%= @post_tag.post_tag_name %>タグの投稿一覧</h2>
<% @posts.each do |post| %>
  <div>
    <%= link_to post_path(post.id) do %>
      <%= attachment_image_tag post, :post_image, fallback: "no_image.jpg", size: "180x130" %>
    <% end %>
    <p>タイトル：<%= post.post_title %></p>
    <p>説明：<%= post.post_body %></p>
    <p>ユーザーネーム：<%= post.user.name %></p>
  </div>
<% end %>