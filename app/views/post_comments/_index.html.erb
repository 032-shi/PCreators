<% post.post_comments.each do |post_comment| %>
  <table>
    <tr>
      <td>
        <%= link_to user_path(post.user_id) do %>
        <%= attachment_image_tag post.user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
        <br><%= post.user.name %></br>
        <% end %>
      </td>
      <td>
        <%= post_comment.comment %>
      </td>
      <td>
        <% if post_comment.user == current_user %>
          <%= link_to "Destroy", post_post_comment_path(post_comment.post_id, post_comment.id), method: :delete, remote: true, class: "" %>
        <% end %>
      </td>
    </tr>
  </table>
<% end %>